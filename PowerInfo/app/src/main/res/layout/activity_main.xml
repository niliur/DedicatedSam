<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Battery Capacity (mAh):"
        android:id="@+id/cap"
        android:textColor="@color/black"
        android:layout_alignParentLeft="true"
        android:layout_weight= "20"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="% Capacity Remaining"
        android:id="@+id/capRemaining"
        android:textColor="@color/black"
        android:layout_alignParentLeft="true"
        android:layout_weight= "20"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Average Current (mA):"
        android:id="@+id/currentAve"
        android:textColor="@color/black"
        android:layout_alignParentLeft="true"
        android:layout_weight= "20"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Instantaneous Current (mA):"
        android:id="@+id/currentIns"
        android:textColor="@color/black"
        android:layout_alignParentLeft="true"
        android:layout_weight= "20"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remaining Energy (nWh):"
        android:id="@+id/energyRemaining"
        android:textColor="@color/black"
        android:layout_alignParentLeft="true"
        android:layout_weight= "20"/>
</LinearLayout>

