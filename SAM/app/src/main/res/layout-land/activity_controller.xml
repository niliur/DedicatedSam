<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="640dp"
    android:layout_height="350dp"
    android:background="@drawable/controllerbackground"
    android:orientation="horizontal"
    android:weightSum="1">

    <util.VerticalSeekBar
        android:id="@+id/VerticalSeekBarLeft"
        android:layout_width="wrap_content"
        android:layout_height="330dp"
        android:layout_alignLeft="@+id/VerticalSeekBarRight"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="18dp"
        android:layout_marginLeft="175dp"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@+id/VerticalSeekBarRight"
        android:indeterminate="false"
        android:max="90"
        android:progress="45"
        android:progressDrawable="@drawable/seekbarbackground"
        android:thumb="@drawable/sliderthumb" />


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/placeholder"
        android:layout_width="220dp"
        android:layout_height="100dp">

        <util.LightViewLeft
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/lightleft"
            android:layout_width="70dp"
            android:layout_height="87dp"
            android:background="@drawable/cone_light_left"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="40dp" />

        <util.LightViewRight
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/LightRight"
            android:layout_width="70dp"
            android:layout_height="87dp"
            android:background="@drawable/cone_light_right"
            android:layout_toRightOf="@id/lightleft" />

        <ImageView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:background="@drawable/lighthide"
            android:id="@+id/imageView"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
        </ImageView>

    </RelativeLayout>


    <util.VerticalSeekBar
        android:id="@+id/VerticalSeekBarRight"
        android:layout_width="wrap_content"
        android:layout_height="330dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/placeholder"
        android:layout_toRightOf="@+id/placeholder"
        android:indeterminate="false"
        android:max="90"
        android:progress="45"
        android:progressDrawable="@drawable/seekbarbackground"
        android:thumb="@drawable/sliderthumb"
        android:layout_marginTop="12dp" />


</LinearLayout>


