<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/controllerBackground"
    android:background="@drawable/controllerbackground"
    android:orientation="horizontal"
    android:weightSum="1">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="640dp"
    android:layout_height="350dp"
    android:orientation="horizontal"
    android:weightSum="1">

    <util.VerticalSeekBar
        android:id="@+id/VerticalSeekBarLeft"
        android:layout_width="50dp"
        android:layout_height="330dp"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="12dp"
        android:max="90"
        android:progress="45"
        android:progressDrawable="@drawable/seekbarbackxml"
        android:thumb="@drawable/thumbselector"
        android:minHeight="1000dip"
        android:maxHeight="1000dip"/>


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/placeholder"
        android:layout_width="220dp"
        android:layout_height="100dp">

        <!--
        <util.LightViewLeft
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/lightleft"
            android:layout_width="70dp"
            android:layout_height="87dp"
            android:background="@drawable/cone_light_left"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="40dp" />

        <util.LightViewRight
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/LightRight"
            android:layout_width="70dp"
            android:layout_height="87dp"
            android:background="@drawable/cone_light_right"
            android:layout_toRightOf="@id/lightleft" />
            -->

    </RelativeLayout>


    <util.VerticalSeekBar
        android:id="@+id/VerticalSeekBarRight"
        android:layout_width="50dp"
        android:layout_height="330dp"
        android:layout_toEndOf="@+id/placeholder"
        android:layout_toRightOf="@+id/placeholder"
        android:indeterminate="false"
        android:max="90"
        android:progress="45"
        android:progressDrawable="@drawable/seekbarbackxml"
        android:thumb="@drawable/thumbselector"
        android:layout_marginTop="12dp"
        android:layout_marginRight="20dp"
        android:minHeight="1000dip"
        android:maxHeight="1000dip"/>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/buttonHolder"
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp">

        <FrameLayout
            android:id="@+id/aButton"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="20dp"
            android:foreground="@drawable/rounded_button_selector" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:background ="@drawable/screen_a_button" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/bButton"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@id/aButton"
            android:layout_marginTop="20dp"
            android:foreground="@drawable/rounded_button_selector" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:background ="@drawable/screen_b_button" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/cButton"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@id/bButton"
            android:layout_marginTop="20dp"
            android:foreground="@drawable/rounded_button_selector" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:background ="@drawable/screen_c_button" />
        </FrameLayout>


    </RelativeLayout>

</LinearLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="640dp"
        android:layout_height="350dp">
        <FrameLayout
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:id="@+id/home"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="false"
            android:layout_alignParentLeft="true"
            android:foreground="@drawable/rounded_button_selector" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:background ="@drawable/home_button" />
        </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:text="Determining Bluetooth Status..."
        android:id="@+id/bluetoothStatus"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="false"
        android:layout_alignParentRight="false"
        android:layout_marginLeft="220dp"
        android:layout_marginRight="180dp"
        android:layout_alignParentEnd="false" />
</RelativeLayout>
</RelativeLayout>

