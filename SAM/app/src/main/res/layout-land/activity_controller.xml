<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/controllerbackground"
    android:orientation="horizontal"
    android:weightSum="1">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="640dp"
    android:layout_height="350dp"
    android:orientation="horizontal"
    android:weightSum="1">

    <util.VerticalSeekBar
        android:id="@+id/VerticalSeekBarLeft"
        android:layout_width="70dp"
        android:layout_height="330dp"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="12dp"
        android:max="90"
        android:progress="45"
        android:progressDrawable="@drawable/seekbarbackxml"
        android:thumb="@drawable/thumbselector"
        android:minHeight="1000dip"
        android:maxHeight="1000dip"/>


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/placeholder"
        android:layout_width="220dp"
        android:layout_height="100dp">

        <!--
        <util.LightViewLeft
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/lightleft"
            android:layout_width="70dp"
            android:layout_height="87dp"
            android:background="@drawable/cone_light_left"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="40dp" />

        <util.LightViewRight
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/LightRight"
            android:layout_width="70dp"
            android:layout_height="87dp"
            android:background="@drawable/cone_light_right"
            android:layout_toRightOf="@id/lightleft" />
            -->

    </RelativeLayout>


    <util.VerticalSeekBar
        android:id="@+id/VerticalSeekBarRight"
        android:layout_width="70dp"
        android:layout_height="330dp"
        android:layout_toEndOf="@+id/placeholder"
        android:layout_toRightOf="@+id/placeholder"
        android:indeterminate="false"
        android:max="90"
        android:progress="45"
        android:progressDrawable="@drawable/seekbarbackxml"
        android:thumb="@drawable/thumbselector"
        android:layout_marginTop="12dp"
        android:minHeight="1000dip"
        android:maxHeight="1000dip"/>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/buttonHolder"
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp">

        <Button
            android:id="@+id/aButton"
            android:background ="@drawable/screen_a_button"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="20dp" />
        <Button
            android:id="@+id/bButton"
            android:background ="@drawable/screen_b_button"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@id/aButton"
            android:layout_marginTop="20dp" />
        <Button
            android:id="@+id/cButton"
            android:background ="@drawable/screen_c_button"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@id/bButton"
            android:layout_marginTop="20dp" />

    </RelativeLayout>

</LinearLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="640dp"
        android:layout_height="350dp">
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OPTIONS"
        android:id="@+id/options"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="false"
        android:layout_alignParentLeft="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BLUETOOTH"
        android:id="@+id/bluetooth"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="false"
        android:layout_alignParentLeft="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WIFI"
        android:id="@+id/wifi"
        android:layout_above="@+id/bluetoothStatus"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:gravity="center"
        android:text="Determining Bluetooth Status..."
        android:id="@+id/bluetoothStatus"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="false"
        android:layout_alignParentRight="false"
        android:layout_marginLeft="220dp"
        android:layout_marginRight="180dp"
        android:layout_alignParentEnd="false" />
</RelativeLayout>
</RelativeLayout>

