<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="640dp"
    android:layout_height="350dp"
    android:orientation="horizontal"
    android:background="@drawable/controllerbackground">

    <util.VerticalSeekBar
        android:id="@+id/VerticalSeekBarLeft"
        android:layout_width="50dp"
        android:layout_height="340dp"
        android:progressDrawable="@android:color/transparent"
        android:thumb="@drawable/sliderthumb"
        android:max="90"
        android:progress="45"
        android:indeterminate="false"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="166.5dp" />

    <util.VerticalSeekBar
        android:id="@+id/VerticalSeekBarRight"
        android:layout_width="50dp"
        android:layout_height="340dp"
        android:progressDrawable="@android:color/transparent"
        android:thumb="@drawable/sliderthumb"
        android:max="90"
        android:progress="45"
        android:indeterminate="false"
        android:layout_marginLeft="138dp"
        android:layout_marginStart="136.5dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/headlightleft"
        android:layout_toEndOf="@+id/headlightleft" />

    <util.LightView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/headlightleft"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="55dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/VerticalSeekBarLeft"
        android:layout_toEndOf="@+id/VerticalSeekBarLeft"
        android:layout_margin="10dp" />

    <util.LightView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/headlightRight"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignTop="@+id/VerticalSeekBarRight"
        android:layout_alignRight="@+id/VerticalSeekBarRight"
        android:layout_alignEnd="@+id/VerticalSeekBarRight"
        android:layout_marginTop="55dp"
        android:layout_marginRight="21dp" />



</RelativeLayout>


