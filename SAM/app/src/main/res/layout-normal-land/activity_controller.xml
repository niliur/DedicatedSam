<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/controllerBackground"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    android:tag="normal">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/white">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:src="@drawable/controllerbackground"/>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal"
            android:weightSum="1"
            android:gravity="center">

            <util.VerticalSeekBar
                android:id="@+id/VerticalSeekBarLeft"
                android:layout_width="50dp"
                android:layout_height="330dp"
                android:layout_marginLeft="140dp"
                android:layout_marginTop="12dp"
                android:max="90"
                android:maxHeight="1000dip"
                android:minHeight="1000dip"
                android:progress="45"
                android:progressDrawable="@drawable/seekbarbackxml"
                android:thumb="@drawable/thumbselector" />


            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/placeholder"
                android:layout_width="220dp"
                android:layout_height="100dp">

                <!--
                <util.LightViewLeft
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/lightleft"
                    android:layout_width="70dp"
                    android:layout_height="87dp"
                    android:background="@drawable/cone_light_left"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="40dp" />

                <util.LightViewRight
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/LightRight"
                    android:layout_width="70dp"
                    android:layout_height="87dp"
                    android:background="@drawable/cone_light_right"
                    android:layout_toRightOf="@id/lightleft" />
                    -->

            </RelativeLayout>


            <util.VerticalSeekBar
                android:id="@+id/VerticalSeekBarRight"
                android:layout_width="50dp"
                android:layout_height="330dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="12dp"
                android:layout_toEndOf="@+id/placeholder"
                android:layout_toRightOf="@+id/placeholder"
                android:indeterminate="false"
                android:max="90"
                android:maxHeight="1000dip"
                android:minHeight="1000dip"
                android:progress="45"
                android:progressDrawable="@drawable/seekbarbackxml"
                android:thumb="@drawable/thumbselector" />


        </LinearLayout>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/buttonHolder"
            android:layout_width="@dimen/controller_button_raduis_normal"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginRight="50dp">

            <FrameLayout
                android:id="@+id/aButton"
                android:layout_width="@dimen/controller_button_raduis_normal"
                android:layout_height="@dimen/controller_button_raduis_normal"
                android:layout_marginTop="30dp"
                android:foreground="@drawable/rounded_button_selector">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/screen_a_button"
                    android:scaleType="fitXY" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/bButton"
                android:layout_width="@dimen/controller_button_raduis_normal"
                android:layout_height="@dimen/controller_button_raduis_normal"
                android:layout_below="@id/aButton"
                android:layout_marginTop="40dp"
                android:foreground="@drawable/rounded_button_selector">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/screen_b_button"
                    android:scaleType="fitXY" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/cButton"
                android:layout_width="@dimen/controller_button_raduis_normal"
                android:layout_height="@dimen/controller_button_raduis_normal"
                android:layout_below="@id/bButton"
                android:layout_marginTop="40dp"
                android:foreground="@drawable/rounded_button_selector">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/screen_c_button"
                    android:scaleType="fitXY" />
            </FrameLayout>


        </RelativeLayout>


        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:id="@+id/home"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="false"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:foreground="@drawable/rounded_button_selector">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/home_button"
                    android:scaleType="fitXY" />
            </FrameLayout>

            <TextView
                android:id="@+id/bluetoothStatus"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="false"
                android:layout_alignParentLeft="false"
                android:layout_alignParentRight="false"
                android:layout_marginLeft="220dp"
                android:layout_marginRight="180dp"
                android:gravity="center"
                android:text="Determining Bluetooth Status..."
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@android:color/black" />
        </RelativeLayout>
    </FrameLayout>
</RelativeLayout>

